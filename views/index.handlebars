<div class="jumbotron">
    <h1>Eat That Burger</h1>
    <h3>Add A Burger Below, Then Eat It!</h3>
</div>

<div class="container">


    <br>

    <div class="row">
        <div class="col-md-6" id="menu_col">
            <h2>menu</h2>
            <hr>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6" id="eaten_col">
            <h2>eaten</h2>
            <hr>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>{{burger_name}}</li>
                {{/if}}
                {{/each}}

            </ul>
        </div>
    </div>

    <br>

    <div class="row">
        <div class="col-md-4">
            <form action="/burgers" method="POST">
                <textarea type="text" id="burgername" name="burger_name"></textarea>
                <br>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

</div>